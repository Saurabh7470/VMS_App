@page "/Appointment"
@inject NavigationManager navigate


<MudCard Elevation="4" Outlined Class="m-2">
    <MudCardHeader>
         <MudButton OnClick="Back" Variant="Variant.Filled"><MudIcon Icon="@Icons.Material.Filled.ArrowBack" Size="Size.Small" />Back</MudButton>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.h5" Style="text-align:center; font-family:Arial">Appointment Request</MudText>
         <MudDivider Light DividerType="DividerType.Middle" Class="m-2 mb-5"/>
        <MudForm>
            <MudGrid Spacing="2">
                <MudItem xs="12" sm="12" md="6" lg="6"> 
                        <MudTextField T="DateTime" @bind-Value="appintment.FromDate" Label="Appointment From" Variant="Variant.Outlined" Margin="Margin.Dense" InputType="InputType.DateTimeLocal" Required RequiredError="Please Select Date"></MudTextField>             
                </MudItem>
                <MudItem xs="12" sm="12" md="6" lg="6">
                        <MudTextField T="DateTime" @bind-Value="appintment.ToDate" Label="Appointment To" Variant="Variant.Outlined" Margin="Margin.Dense" InputType="InputType.DateTimeLocal" Required RequiredError="Please Select Date"></MudTextField>
                </MudItem>
                <MudItem xs="12" sm="12" md="4" lg="4">
                    <MudSelect @bind-Value="appintment.AppointmentType" Label="Appointment Type" Margin="Margin.Dense" Variant="Variant.Outlined" Required RequiredError="Please Select one Documnet">
                             <MudSelectItem Value="@("ABC")" />
                             <MudSelectItem Value="@("DEF")" />
                         </MudSelect>
                  </MudItem>
                 <MudItem xs="12" sm="12" md="4" lg="4">
                         <MudTextField T="Guid" @bind-Value="appintment.EmployeeID" Label="Employee Name" Variant="Variant.Outlined" Margin="Margin.Dense" Required RequiredError="Enter Employee Name"></MudTextField>
                 </MudItem>
                 <MudItem xs="12" sm="12" md="4" lg="4">
                         <MudTextField @bind-Value="appintment.Location" Label="Location" Variant="Variant.Outlined" Margin="Margin.Dense" Required RequiredError="Enter Location"></MudTextField>
                 </MudItem>
                 <MudItem xs="6" sm="6" md="4" lg="4">
                         <MudSelect T="int" @bind-Value="appintment.Accesory" Label="Accessories" Margin="Margin.Dense" Variant="Variant.Outlined" Required RequiredError="Please Select one Documnet"> 
                             <MudSelectItem T="int" Value="@(1)">Yes</MudSelectItem>
                             <MudSelectItem T="int" Value="@(0)">No</MudSelectItem>
                         </MudSelect>
                 </MudItem>
                 <MudItem xs="12" sm="12" md="8" lg="8">
                         <MudTextField @bind-Value="appdetails.Description" Label="Accessories Descripition" Variant="Variant.Outlined" Margin="Margin.Dense" Lines="2"></MudTextField>
                 </MudItem>
             </MudGrid>
         </MudForm>
     </MudCardContent>
     <MudCardActions>
       <MudButton Variant="Variant.Filled" Color="Color.Success" Size="Size.Small" FullWidth OnClick="Submit">Submit</MudButton>  
     </MudCardActions>
 </MudCard>

 @code {
    Tbl_Appointment_Header appintment = new();
    Tbl_Appointment_Details appdetails = new();

    private void Oninsilize()
    {
        
    }


    private void Back()
    {
        navigate.NavigateTo("/");
    }

    private void Submit()
    {
        
    }
}
