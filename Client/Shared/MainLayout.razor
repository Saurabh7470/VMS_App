@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />


<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Tertiary" Dense>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudDrawerHeader Dense>
            <MudText Color="Color.Tertiary"><MudIcon Icon="@Icons.Material.Filled.MeetingRoom" Color="Color.Tertiary"/><b>Visitor Management</b></MudText>
         </MudDrawerHeader>
        <MudDivider Light DividerType="DividerType.Middle" />
         <NavMenu />
     </MudDrawer>
     <MudMainContent>
         <MudContainer>
         @Body
         </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool open = true;

    void ToggleDrawer()
    {
        open = !open;
    }
}