@inherits LayoutComponentBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Color="Color.Tertiary" Dense="true">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudMenu Icon="@Icons.Material.Filled.MoreVert" Dense>

            <MudMenuItem><MudButton Variant="Variant.Text" Color="Color.Tertiary" Size="Size.Small"><MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Tertiary" Size="Size.Small" Class="m-2"/>Profile</MudButton></MudMenuItem>
            <MudDivider Light DividerType="DividerType.FullWidth" />
            <MudMenuItem><MudButton Variant="Variant.Text" Color="Color.Tertiary" Size="Size.Small"><MudIcon Icon="@Icons.Material.Filled.NotificationsActive" Color="Color.Tertiary" Size="Size.Small" Class="m-2" />Notification</MudButton></MudMenuItem>
             <MudDivider Light DividerType="DividerType.FullWidth" />
            <MudMenuItem><MudButton Variant="Variant.Text" Color="Color.Error" Size="Size.Small"><MudIcon Icon="@Icons.Material.Filled.ExitToApp" Color="Color.Error" Size="Size.Small" Class="m-2"/>Logout</MudButton></MudMenuItem>

        </MudMenu>
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudDrawerHeader Dense>
            <MudText Color="Color.Tertiary"><MudIcon Icon="@Icons.Material.Filled.MeetingRoom" Color="Color.Tertiary"/><b>Visitor Management</b></MudText>
         </MudDrawerHeader>
        <MudDivider Light DividerType="DividerType.Middle" />
         <NavMenu />
     </MudDrawer>
     <MudMainContent>
         <MudContainer>
         @Body
         </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool open = true;

    void ToggleDrawer()
    {
        open = !open;
    }
}